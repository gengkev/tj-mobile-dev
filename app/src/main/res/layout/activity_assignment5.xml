<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.github.gengkev.exampleapp.Assignment5Activity">

    <io.github.gengkev.exampleapp.MyTextView
        android:id="@+id/assgn5_view1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="#EF5350"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textSize="30sp"
        app:initialValue="@integer/zero"
        />

    <io.github.gengkev.exampleapp.MyTextView
        android:id="@+id/assgn5_view2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="#7E57C2"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textSize="30sp"
        app:initialValue="@integer/zero"
        />

    <io.github.gengkev.exampleapp.MyTextView
        android:id="@+id/assgn5_view3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="#26C6DA"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textSize="30sp"
        app:initialValue="@integer/zero"
        />

    <io.github.gengkev.exampleapp.MyTextView
        android:id="@+id/assgn5_view4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="#9CCC65"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textSize="30sp"
        app:initialValue="@integer/zero"
        />

</RelativeLayout>
