<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.gengkev.exampleapp" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Assignment3Activity"
            android:label="@string/assgn3_label"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Assignment4Activity"
            android:label="@string/assgn4_label"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Assignment5Activity"
            android:label="@string/assgn5_label"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Assignment6Activity"
            android:label="@string/assgn6_label"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Assignment6HelperActivity"
            android:label="@string/assgn6_label_helper"
            android:parentActivityName=".Assignment6Activity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".Assignment7Activity"
            android:label="@string/assgn7_label"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Assignment9Activity"
            android:label="@string/assgn9_label"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>
